///////////////////////////////////////////////////////////////////////////////
// Interface - public :

template <typename T>
inline
typename DGtal::DSSLengthEstimator<T>::Quantity
DGtal::DSSLengthEstimator<T>::eval( const ConstIterator& itb,
    const ConstIterator& ite, const double h ) const
{
  ASSERT(h > 0.);

  //segments into DSSs
  DSSComputer computer; 
  GreedySegmentation<DSSComputer> decomposition( itb, ite, computer ); 

  //computes the resulting polygonal representation
  typename GreedySegmentation<DSSComputer>::SegmentComputerIterator i = decomposition.begin();
  typename GreedySegmentation<DSSComputer>::SegmentComputerIterator j = i;
  ++j;
  const typename GreedySegmentation<DSSComputer>::SegmentComputerIterator end = decomposition.end();

  Quantity val = 0.;
  if ( i == end )
    return val;

  for ( ; j != end; ++i, ++j )
  {
    Vector v( j->back() - i->back() );
    val += v.norm(Vector::L_2);
  }
  Vector v( lastPoint(ite) - i->back() );
  val += v.norm(Vector::L_2);
  
  return val*h;
}

///////////////////////////////////////////////////////////////////////////////
// Interface - private :

template <typename T>
inline
typename DGtal::DSSLengthEstimator<T>::Point
DGtal::DSSLengthEstimator<T>::lastPoint(const ConstIterator& ite) const
{
  return lastPoint(ite, typename DGtal::IteratorCirculatorTraits<ConstIterator>::Type()); 
}

template <typename T>
inline
typename DGtal::DSSLengthEstimator<T>::Point
DGtal::DSSLengthEstimator<T>::lastPoint(const ConstIterator& ite, IteratorType) const
{
  ConstIterator itcopy = ite;
  return *--itcopy;
}

template <typename T>
inline
typename DGtal::DSSLengthEstimator<T>::Point
DGtal::DSSLengthEstimator<T>::lastPoint(const ConstIterator& c, CirculatorType) const
{
  return *c; 
}





// ------------------------------------------------------------------------
template <typename T>
inline
void
DGtal::DSSLengthEstimator<T>::selfDisplay ( std::ostream & out ) const
{
  out << "[DSSLengthEstimator]";
  if (isValid())
    out <<" initialized";
  else
    out<< " not initialized";
}

// ------------------------------------------------------------------------
template <typename T>
inline
bool
DGtal::DSSLengthEstimator<T>::isValid() const
{
    return true;
}



///////////////////////////////////////////////////////////////////////////////
// Implementation of inline functions                                        //

template <typename T>
inline
std::ostream&
DGtal::operator<< ( std::ostream & out, 
      const DSSLengthEstimator<T> & object )
{
  object.selfDisplay( out );
  return out;
}

