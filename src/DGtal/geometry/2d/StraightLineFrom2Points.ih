///////////////////////////////////////////////////////////////////////////////
// IMPLEMENTATION of inline methods.
///////////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////////
// ----------------------- Standard services ------------------------------

/**
 * Destructor.
 */
template <typename TPoint>
inline
DGtal::StraightLineFrom2Points<TPoint>::~StraightLineFrom2Points()
{
}

/**
 * Constructor.
 * @param firstPoint, secondPoint, two points
 * that uniquely define the StraightLineFrom2Points
 */
template <typename TPoint>
inline
DGtal::StraightLineFrom2Points<TPoint>::StraightLineFrom2Points(
        const Point& aFirstPoint, 
        const Point& aSecondPoint):
        myP(aFirstPoint),
        myQ(aSecondPoint)
{
}

/**
 * Copy constructor.
 * @param other the object to clone.
 */
template <typename TPoint>
inline
DGtal::StraightLineFrom2Points<TPoint>::StraightLineFrom2Points(
        const StraightLineFrom2Points & other):
        myP(other.myP),
        myQ(other.myQ)
{
}

/**
 * Assignment.
 * @param other the object to copy.
 * @return a reference on 'this'.
 */
template <typename TPoint>
inline
DGtal::StraightLineFrom2Points<TPoint>&
DGtal::StraightLineFrom2Points<TPoint>::operator=(
        const StraightLineFrom2Points & other)
{
  myP = other.myP;
  myQ = other.myQ;
  return *this;
}


/**
 * Computes the signed distance of [aP] to the StraightLineFrom2Points
 * @param aP, the point to be tested.
 * @return the signed distance.
 */
template <typename TPoint>
inline
typename DGtal::StraightLineFrom2Points<TPoint>::Distance
DGtal::StraightLineFrom2Points<TPoint>::signedDistance(const Point& aP) const
{
  Vector pq = myQ - myP;
  Vector pr = aP - myP;
  //computation of det(pq, pr) 
  //(= twice the parallelogram area)
  return ((pq.at(0) * pr.at(1)) - (pq.at(1) * pr.at(0)));
}


///////////////////////////////////////////////////////////////////////////////
// Interface - public :

template <typename TPoint>
inline
DGtal::DrawableWithBoard2D*
DGtal::StraightLineFrom2Points<TPoint>::defaultStyle( std::string /*mode*/ ) const
{
  return new DrawableWithBoard2D; 
}

template <typename TPoint>
inline
std::string
DGtal::StraightLineFrom2Points<TPoint>::styleName() const
{
  return "StraightLineFrom2Points";
}

template <typename TPoint>
inline
void 
DGtal::StraightLineFrom2Points<TPoint>::selfDraw(Board2D & aBoard) const
{
  aBoard.drawLine(myP[0],myP[1],myQ[0],myQ[1]);
}


/**
 * Writes/Displays the object on an output stream.
 * @param out the output stream where the object is written.
 */
template <typename TPoint>
inline
void
DGtal::StraightLineFrom2Points<TPoint>::selfDisplay ( std::ostream & out ) const
{
  out << "[StraightLineFrom2Points] passing through:\n";
  out << myP << myQ;
}

/**
 * Checks the validity/consistency of the object.
 * @return 'true' if the object is valid, 'false' otherwise.
 */
template <typename TPoint>
inline
bool
DGtal::StraightLineFrom2Points<TPoint>::isValid() const
{
    return true;
}


