template <typename Domain2D>
inline
void 
DGtal::ArithDSS<Domain2D>::selfDisplay ( std::ostream & out ) const
{
	out << "("<< myA << "/" << myB << ", ";
	out << myMu << ", " << (myMu+myOmega-1) << ") ";
	out << "first " << myF << "last " << myL;
	out << "Uf " << myUf << "Ul " << myUl;
	out << "Lf " << myLf << "Ll " << myLl;
}

