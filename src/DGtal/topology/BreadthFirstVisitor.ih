template < typename TGraph, typename TMarkSet >
inline
std::ostream&
DGtal::operator<< ( std::ostream & out, 
                    const BreadthFirstVisitor<TGraph,TMarkSet> & object )
{
  object.selfDisplay( out );
  return out;
}

