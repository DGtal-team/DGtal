template <typename TInteger, typename TSize, typename TMap>
inline
bool 
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
isAncestorDirect() const
{
  return myNode->k == myNode->ancestor()->k + NumberTraits<Size>::ONE;
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
father() const
{
  return Fraction( myNode->father(), mySup1 );
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
father( Size m ) const
{
  if ( m >= NumberTraits<Size>::ONE ) // >= 1
    return Fraction( myNode->origin()->child( m ), mySup1 );
  else
    return reduced( 2 );
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
previousPartial() const
{
  return ancestor();
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
inverse() const
{
  return ( ( myNode->k == NumberTraits<Size>::ZERO )
           && ( myNode->u == NumberTraits<Size>::ONE ) )
    ? *this
    : Fraction( myNode, ! mySup1 );
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
partial( Size kp ) const
{
  ASSERT( ( ((Size)-2) <= kp ) && ( kp <= k() ) );
  return reduced( k() - kp );
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
reduced( Size i ) const
{
  ASSERT( ( ((Size)0) <= i ) && ( i <= ( k()+((Size)2) ) ) );
  if ( i == NumberTraits<Size>::ZERO )
    return *this;
  if ( i > myNode->k )
    {
      Size m = i - k();
      return NumberTraits<Size>::odd( m ) 
        ? oneOverZero()
        : zeroOverOne();
    }
  // reduced( [0, ...], n ) = [0]
  if ( ! mySup1 && ( i == k() ) )
    return zeroOverOne();
  // reduced( z_n, k ), for k <= n
  Node* node = myNode;
  for ( ; i != NumberTraits<Size>::ZERO; --i )
    node = node->origin();
  Size _u = node->u;
  node = node->origin()->child( _u - NumberTraits<Size>::ONE );
  return Fraction( node, mySup1 );
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
void
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
push_back( const std::pair<Size, Size> & quotient )
{
  pushBack( quotient );
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
void
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
pushBack( const std::pair<Size, Size> & quotient )
{
  // std::vector<Size> quots;
  // if ( ! null() )
  //   {
  //     this->getCFrac( quots );
  //     std::cerr << "F[";
  //     for ( unsigned int i = 0; i < quots.size(); ++i )
  //       std::cerr << " " << quots[ i ];
  //   }
  // else std::cerr << "[";
  // std::cerr << "] + " << "(" << quotient.first 
  //           << "," << quotient.second << ")";
  if ( null() )
    {
      ASSERT( quotient.second <= NumberTraits<Size>::ZERO );
      if ( quotient.second < NumberTraits<Size>::ZERO )
        this->operator=( oneOverZero() );
      else if ( quotient.first == NumberTraits<Size>::ZERO ) // (0,0)
        this->operator=( zeroOverOne() );
      else
        this->operator=( oneOverZero().child( quotient.first ) );
    }
  else if ( this->myNode == instance().myOneOverZero )
    {
      if ( this->mySup1 ) // 1/0
        {
          ASSERT( quotient.second == NumberTraits<Size>::ZERO );
          if ( quotient.first == NumberTraits<Size>::ZERO ) // (0,0)
            this->operator=( zeroOverOne() );
          else
            this->operator=( oneOverZero().child( quotient.first ) );
        }
      else // 0/1
        {
          ASSERT( quotient.second == NumberTraits<Size>::ONE );
          this->operator=( oneOverZero().child( quotient.first ).inverse() );
        }
    }
  else 
    { // Generic case.
      if ( quotient.second == this->k() + NumberTraits<Size>::ONE )
        this->operator=( origin().child( u() + NumberTraits<Size>::ONE )
                         .child( quotient.first ) );
      else if ( ( this->k() == NumberTraits<Size>::ZERO ) 
                && ( this->u() == NumberTraits<Size>::ONE ) ) // (1/1)
        {
          this->operator=( oneOverZero().child( 2 ).inverse() );  // (1/(1+1))
          if ( quotient.first > NumberTraits<Size>::ONE )
            this->operator=( child( quotient.first ) ); // (1/(1+1/q))
        }
      else // preceding node was [....,u_k,1]
        this->operator=( child( 2 ).child( quotient.first ) );
    }
  // quots.clear();
  // this->getCFrac( quots );
  // std::cerr << " => F[";
  // for ( unsigned int i = 0; i < quots.size(); ++i )
  //   std::cerr << " " << quots[ i ];
  // std::cerr << "]" << std::endl;
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
void
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
getSplit( Fraction & f1, Fraction & f2 ) const
{
  if ( odd() )
    {
      f1 = ancestor();
      f2 = father();
    }
  else
    {
      f1 = father();
      f2 = ancestor();
    }
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
void
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
getSplitBerstel( Fraction & f1, Size & nb1, 
		 Fraction & f2, Size & nb2 ) const
{
  if ( odd() )
    {
      f1 = ancestor();
      f2 = reduced( 2 );
      nb1 = this->u();
      nb2 = 1;
    }
  else
    {
      f1 = reduced( 2 );
      f2 = ancestor();
      nb1 = 1;
      nb2 = this->u();
    }
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
void
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
getCFrac( std::vector<Size> & quotients ) const
{
  ASSERT( k() >= NumberTraits<Size>::ZERO );
  int64_t i = NumberTraits<Size>::castToInt64_t( k() );
  if ( null() ) return;
  quotients.resize( i + 1 );
  Fraction f( *this );
  quotients[ i-- ] = f.u();
  f = f.origin();
  if ( i >= 0 )
    {
      for ( ; i >= 1; --i )
        {
          quotients[ i ] = f.u() - NumberTraits<Size>::ONE;
          f = f.origin();
        }
      quotients[ 0 ] = mySup1 ? f.u() - NumberTraits<Size>::ONE
        : NumberTraits<Size>::ZERO;
    }
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::ConstIterator
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
begin() const
{
  CFracSequence* seq = new CFracSequence;
  this->getCFrac( *seq );
  return ConstIterator( seq, seq->begin() );
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::ConstIterator
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
end() const
{
  static CFracSequence dummy;
  return ConstIterator( 0, dummy.end() );
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
void
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
selfDisplay( std::ostream & out ) const
{
  if ( this->null() ) out << "[Fraction null]";
  else
    {
      out << "[Fraction f=" << this->p() 
          << "/" << this->q()
          << " u=" << this->u()
          << " k=" << this->k()
          << std::flush;
      std::vector<Size> quotients;
      if ( this->k() >= 0 )
        {
          this->getCFrac( quotients );
          out << " [" << quotients[ 0 ];
          for ( unsigned int i = 1; i < quotients.size(); ++i )
            out << "," << quotients[ i ];
          out << "]";
        }
      out << " ]";
    }
}

