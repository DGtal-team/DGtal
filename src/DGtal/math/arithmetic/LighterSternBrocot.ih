// DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Node 
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Node::
Node( Integer p1, Integer q1, Size u1, Size k1, 
      Node* _origin )
  : p( p1 ), q( q1 ), u( u1 ), k( k1 ), 
    myOrigin( _origin )
{
  ASSERT( p >= NumberTraits<Integer>::ONE );
  //  if ( k == 0 )
  // std::cerr << "(" << p1 << "/" << q1 << "," << u1 << "," << k1 << ")";
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Node*
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Node::
child( Size v )
{
  typedef typename MapSizeToNode::iterator Iterator;
  ASSERT( v != NumberTraits<Size>::ZERO );
  if ( v == NumberTraits<Size>::ONE ) 
    return ( this == instance().myOneOverZero )
      ? instance().myOneOverOne
      : this;
  Iterator itkey = myChildren.find( v );
  if ( itkey != myChildren.end() ) 
    return itkey->second;
  if ( this == instance().myOneOverZero )
    {
      Node* newNode = 
        new Node( (int) NumberTraits<Size>::castToInt64_t( v ),  // p' = v
                  NumberTraits<Integer>::ONE,              // q' = 1
                  v,                                       // u' = v
                  NumberTraits<Size>::ZERO,                // k' = 0
                  this );
      myChildren[ v ] = newNode;
      ++( instance().nbFractions );
      return newNode;
    }
  long int _v = NumberTraits<Size>::castToInt64_t( v );
  long int _u = NumberTraits<Size>::castToInt64_t( this->u );
  Integer _pp = origin() == instance().myOneOverZero 
    ? NumberTraits<Integer>::ONE
    : origin()->p;
  Integer _qq = origin() == instance().myOneOverZero
    ? NumberTraits<Integer>::ONE
    : origin()->q;
  Node* newNode = // p' = v*p - (v-1)*(p-p2)/(u-1)
    new Node( p * _v - ( _v - 1 ) * ( p - _pp ) / (_u - 1), 
              q * _v - ( _v - 1 ) * ( q - _qq ) / (_u - 1), 
              v,                           // u' = v
              k + NumberTraits<Size>::ONE, // k' = k+1
              this );
  myChildren[ v ] = newNode;
  ++( instance().nbFractions );
  return newNode;
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Node*
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Node::
origin() const
{
  return myOrigin;
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Node*
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Node::
ancestor() const
{
  ASSERT( origin() != 0 );
  Node* prevNode = origin();
  Size _u = prevNode->u;
  prevNode = prevNode->origin();
  if ( prevNode == 0 ) return instance().myOneOverZero;
  return prevNode->child( _u - NumberTraits<Size>::ONE );
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Node*
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Node::
father() const
{
  ASSERT( origin() != 0 );
  Node* prevNode = origin();
  if ( this->u == NumberTraits<Size>::ONE ) // 1/1
    return instance().myOneOverZero;
  return prevNode->child( this->u - NumberTraits<Size>::ONE );
}

///////////////////////////////////////////////////////////////////////////////
// DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
Fraction( Integer aP, Integer aQ, Fraction )
{
  if ( ( aP == NumberTraits<Integer>::ZERO ) &&
       ( aQ == NumberTraits<Integer>::ONE ) ) 
    this->operator=( zeroOverOne() );
  else
    {
      bool sup1 = aP >= aQ;
      if ( ! sup1 ) std::swap( aP, aQ );
      Node* node = instance().myOneOverZero;
      Integer _quot, _rem;
      IntegerComputer<Integer> ic;
      ic.getEuclideanDiv( _quot, _rem, aP, aQ );
      Size v = NumberTraits<Integer>::castToInt64_t( _quot );
      // std::cerr << "[u=" << v << "]";
      aP = aQ;
      aQ = _rem;
      while ( aQ != NumberTraits<Integer>::ZERO )
        {
          node = node->child( v + 1 );
          ic.getEuclideanDiv( _quot, _rem, aP, aQ );
          v = NumberTraits<Integer>::castToInt64_t( _quot );
          // std::cerr << "[u=" << v << "]";
          aP = aQ;
          aQ = _rem;
        }
      myNode = node->child( v );
      mySup1 = sup1;
    }
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
Fraction( Node* sb_node, bool sup1 )
  : myNode( sb_node ), mySup1( sup1 )
{
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
Fraction( const Self & other )
  : myNode( other.myNode ), mySup1( other.mySup1 )
{
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction &
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
operator=( const Self & other )
{
  if ( this != &other )
    {
      myNode = other.myNode;
      mySup1 = other.mySup1;
    }
  return *this;
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
bool 
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
null() const
{
  return myNode == 0;
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Integer
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
p() const
{
  return myNode ? ( mySup1 ? myNode->p : myNode->q ) : 0;
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Integer
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
q() const
{
  return myNode ? ( mySup1 ? myNode->q : myNode->p ) : 0;
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Size
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
u() const
{
  ASSERT( myNode != 0 );
  return myNode == instance().myOneOverZero 
    ? ( mySup1 ? NumberTraits<Size>::ONE : NumberTraits<Size>::ZERO )
    : myNode->u;
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Size
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
k() const
{
  ASSERT( myNode != 0 );
  return ( mySup1 || ( myNode == instance().myOneOverOne ) )
    ? myNode->k
    : myNode->k + NumberTraits<Size>::ONE;
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
bool
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
equals( Integer p1, Integer q1 ) const
{
  return ( this->p() == p1 ) && ( this->q() == q1 );
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
bool
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
lessThan( Integer p1, Integer q1 ) const
{
  Integer d = p() * q1 - q() * p1;
  return d < NumberTraits<Integer>::ZERO;
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
bool
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
moreThan( Integer p1, Integer q1 ) const
{
  Integer d = p() * q1 - q() * p1;
  return d > NumberTraits<Integer>::ZERO;
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
bool
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
operator==( const Fraction & other ) const
{
  if ( mySup1 == other.mySup1 ) 
    return ( myNode == other.myNode );
  else
    return ( ( myNode->p == other.myNode->q )
             && ( myNode->q == other.myNode->p ) );
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
bool
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
operator!=( const Fraction & other ) const
{
  return ! this->operator==( other );
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
bool
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
operator<( const Fraction & other ) const
{
  return this->lessThan( other.p(), other.q() );
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
bool
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
operator>( const Fraction & other ) const
{
  return this->moreThan( other.p(), other.q() );
}
//-----------------------------------------------------------------------------
/// @return the fraction [u_0, ..., u_n, v] if [u_0, ..., u_n]
/// is the current fraction. Construct it if it does not exist yet.
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
next( Size v ) const
{
  ASSERT( ! this->null() );
  typedef typename MapSizeToNode::iterator Iterator;
  if ( v == NumberTraits<Size>::ZERO )
    return *this;
  Node* node = myNode->origin()->child( u() + NumberTraits<Size>::ONE );
  return Fraction( node->child( v ), mySup1 );
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
left() const
{
  ASSERT( ! this->null() );
  Node* node;
  if ( myNode == instance().myOneOverZero )
    return oneOverOne();
  node = ( myNode->isSameDepthLeft() ) 
    ? myNode->origin()->child( u() + NumberTraits<Size>::ONE )
    : myNode->child( 2 );
  return Fraction( node, mySup1 );
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
typename DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::Fraction::
right() const
{
  ASSERT( ! this->null() );
  Node* node;
  if ( myNode == instance().myOneOverZero )
    return oneOverOne();
  node = ( ! myNode->isSameDepthLeft() ) 
    ? myNode->origin()->child( u() + NumberTraits<Size>::ONE )
    : myNode->child( 2 );
  return Fraction( node, mySup1 );
}
