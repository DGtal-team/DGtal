//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::~LighterSternBrocot()
{
  if ( myOneOverOne != 0 ) delete myOneOverOne;
  if ( myOneOverZero != 0 ) delete myOneOverZero;
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
DGtal::LighterSternBrocot<TInteger, TSize, TMap>::LighterSternBrocot()
{
  myOneOverZero = new Node( NumberTraits<Integer>::ONE,
                            NumberTraits<Integer>::ZERO,
                            NumberTraits<Size>::ONE,
                            -NumberTraits<Size>::ONE,
                            0 );
  myOneOverOne = new Node( NumberTraits<Integer>::ONE,
                           NumberTraits<Integer>::ONE,
                           NumberTraits<Size>::ONE,
                           NumberTraits<Size>::ZERO,
                           myOneOverZero );
  myOneOverZero->myChildren[ NumberTraits<Size>::ONE ] = myOneOverOne;
  nbFractions = 2;
}
//-----------------------------------------------------------------------------
template <typename TInteger, typename TSize, typename TMap>
inline
