namespace DGtal {
  namespace drawutils {
    glm::vec3 toglm(const DGtal::Color& col) {
      return glm::vec3{col.r(), col.g(), col.b()};
    }

    std::vector<glm::vec3> toglm(const std::vector<DGtal::Color>& col) {
      std::vector<glm::vec3> colors(col.size());
      for (size_t i = 0; i < colors.size(); ++i) {
        colors[i] = toglm(col[i]);
      }
      return colors;
    }

    glm::mat4 toglm(const Eigen::Affine3d& transform) {
      glm::mat4 glmmat(1.f);
      Eigen::Matrix4d mat = transform.matrix();

      for (int i = 0; i < 4; ++i) 
        for (int j = 0; j < 4; ++j)
          glmmat[i][j] = static_cast<float>(mat(j, i));
      return glmmat;
    }
  }
  
  template <typename Space, typename KSpace>
  void PolyscopeViewer<Space, KSpace>::setCallback(typename Display3D<Space, KSpace>::Callback* callback) {
    Display3D<Space, KSpace>::setCallback(callback);
    if (this->myCallback != nullptr) {
        polyscope::state::userCallback = [this]() { this->polyscopeCallback(); };
    } else {
        polyscope::state::userCallback = nullptr; // Remove callback 
    }
  }

  template <typename Space, typename KSpace>
  void PolyscopeViewer<Space, KSpace>::renderClippingPlanes() {
    using namespace drawutils;

    // Draw clipping planes
    for (const auto& plane : this->planes) {
      const glm::vec3 normal { plane.a, plane.b, plane.c }; 
      glm::vec3 pos {0, 0, 0};

      if (plane.a != 0) { pos.x = -plane.d / plane.a; }
      else if (plane.b != 0) { pos.y = -plane.d / plane.b; }
      else if (plane.c != 0) { pos.z = -plane.d / plane.c; }
      else continue;

      polyscope::SlicePlane* ps = polyscope::addSceneSlicePlane();
      if (!plane.style.useDefaultColors)
        ps->setColor(toglm(plane.style.color));

      //TODO: Keep this as default ?  
      ps->setDrawPlane(true);
      ps->setPose(pos, normal);
    }
  }

  template <typename Space, typename KSpace>
  void PolyscopeViewer<Space, KSpace>::setGeneralProperties(polyscope::Structure* structure, const DisplayData<typename Space::RealPoint>& ddata) {
    using namespace drawutils;

    structure->setTransform(toglm(ddata.transform));
    structure->setTransparency(ddata.style.color.a());
  }

  template <typename Space, typename KSpace>
  void PolyscopeViewer<Space, KSpace>::registerPointCloud(const std::string& name, const DisplayData<typename Space::RealPoint>& ddata) {
    using namespace drawutils;

    auto* pCloud = polyscope::registerPointCloud(name, ddata.vertices);

    setGeneralProperties(pCloud, ddata);
    if (!ddata.style.useDefaultColors) {
      pCloud->setPointColor(toglm(ddata.style.color));
    }

    for (const auto& [pname, vals] : ddata.scalarQuantities[QuantityScale::VERTEX]) {
      pCloud->addScalarQuantity(pname, vals)->setEnabled(true);
    }

    for (const auto& [pname, vals] : ddata.vectorQuantities[QuantityScale::VERTEX]) {
      auto* q = pCloud->addVectorQuantity(pname, vals);
      q->setEnabled(true);
      q->setVectorLengthScale(VectorScale);
    }

    for (const auto& [pname, vals] : ddata.colorQuantities[QuantityScale::VERTEX]) {
      pCloud->addColorQuantity(pname, toglm(vals))->setEnabled(true);
    }
    pCloud->setPointRadius(ddata.style.width * BallToCubeRatio);
  }

  template <typename Space, typename KSpace>
  void PolyscopeViewer<Space, KSpace>::registerLineNetwork(const std::string& name, const DisplayData<typename Space::RealPoint>& ddata) {
    using namespace drawutils;

    auto* cNetwork = polyscope::registerCurveNetwork(name, ddata.vertices, makeIndices<2>(ddata.vertices.size() / 2));

    setGeneralProperties(cNetwork, ddata);
    if (!ddata.style.useDefaultColors) {
      cNetwork->setColor(toglm(ddata.style.color));
    }
    
    for (const auto& [pname, vals] : ddata.scalarQuantities[QuantityScale::VERTEX]) {
      cNetwork->addNodeScalarQuantity(pname, vals)->setEnabled(true);
    }
    for (const auto& [pname, vals] : ddata.scalarQuantities[QuantityScale::EDGE]) {
      cNetwork->addEdgeScalarQuantity(pname, vals)->setEnabled(true);
    }

    for (const auto& [pname, vals] : ddata.vectorQuantities[QuantityScale::VERTEX]) {
      auto* q = cNetwork->addNodeVectorQuantity(pname, vals);
      q->setVectorLengthScale(VectorScale);
      q->setEnabled(true);
    }
    for (const auto& [pname, vals] : ddata.vectorQuantities[QuantityScale::EDGE]) {
      auto* q = cNetwork->addEdgeVectorQuantity(pname, vals);
      q->setVectorLengthScale(VectorScale);
      q->setEnabled(true);
    }

    for (const auto& [pname, vals] : ddata.colorQuantities[QuantityScale::VERTEX]) {
      cNetwork->addEdgeColorQuantity(pname, toglm(vals))->setEnabled(true);
    }     
    for (const auto& [pname, vals] : ddata.colorQuantities[QuantityScale::EDGE]) {
      cNetwork->addEdgeColorQuantity(pname, toglm(vals))->setEnabled(true);
    }     
  }

  template <typename Space, typename KSpace>
  void PolyscopeViewer<Space, KSpace>::registerSurfaceMesh(const std::string& name, const DisplayData<typename Space::RealPoint>& ddata) {
    using namespace drawutils;

    polyscope::SurfaceMesh* mesh = nullptr;
    if (ddata.elementSize == 3) {
      mesh = polyscope::registerSurfaceMesh(name, ddata.vertices, makeIndices<3>(ddata.vertices.size() / 3));
    } else if (ddata.elementSize == 4) {
      mesh = polyscope::registerSurfaceMesh(name, ddata.vertices, makeIndices<4>(ddata.vertices.size() / 4));
    } else {
        mesh = polyscope::registerSurfaceMesh(name, ddata.vertices, ddata.indices);
    }

    setGeneralProperties(mesh, ddata);
    if (!ddata.style.useDefaultColors) {
      mesh->setSurfaceColor(toglm(ddata.style.color));
    }

    for (const auto& [pname, vals] : ddata.scalarQuantities[QuantityScale::VERTEX]) {
      mesh->addVertexScalarQuantity(pname, vals)->setEnabled(true);
    }
    for (const auto& [pname, vals] : ddata.scalarQuantities[QuantityScale::EDGE]) {
      mesh->addEdgeScalarQuantity(pname, vals)->setEnabled(true);
    }
    for (const auto& [pname, vals] : ddata.scalarQuantities[QuantityScale::FACE]) {
      mesh->addFaceScalarQuantity(pname, vals)->setEnabled(true);
    }

    for (const auto& [pname, vals] : ddata.vectorQuantities[QuantityScale::VERTEX]) {
      auto* q = mesh->addVertexVectorQuantity(pname, vals);
      q->setVectorLengthScale(VectorScale);
      q->setEnabled(true);
    }
    for (const auto& [pname, vals] : ddata.vectorQuantities[QuantityScale::FACE]) {
      auto* q = mesh->addFaceVectorQuantity(pname, vals);
      q->setVectorLengthScale(VectorScale);
      q->setEnabled(true);
    }

    for (const auto& [pname, vals] : ddata.colorQuantities[QuantityScale::VERTEX]) {
      mesh->addVertexColorQuantity(pname, toglm(vals))->setEnabled(true);
    }
    for (const auto& [pname, vals] : ddata.colorQuantities[QuantityScale::FACE]) {
      mesh->addFaceColorQuantity(pname, toglm(vals))->setEnabled(true);
    }
  }

  template <typename Space, typename KSpace>
  void PolyscopeViewer<Space, KSpace>::registerVolumeMesh(const std::string& name, const DisplayData<typename Space::RealPoint>& ddata) {
    using namespace drawutils;

    polyscope::VolumeMesh* mesh = polyscope::registerVolumeMesh(name, ddata.vertices, makeIndices<8>(ddata.vertices.size() / 8));

    setGeneralProperties(mesh, ddata);
    if (!ddata.style.useDefaultColors) {
      mesh->setColor(toglm(ddata.style.color));
    }

    for (const auto& [pname, vals] : ddata.scalarQuantities[QuantityScale::VERTEX]) {
      mesh->addVertexScalarQuantity(pname, vals)->setEnabled(true);
    }
    for (const auto& [pname, vals] : ddata.scalarQuantities[QuantityScale::CELL]) {
      mesh->addCellScalarQuantity(pname, vals)->setEnabled(true);
    }

    for (const auto& [pname, vals] : ddata.vectorQuantities[QuantityScale::VERTEX]) {
      auto* q = mesh->addVertexVectorQuantity(pname, vals);
      q->setVectorLengthScale(VectorScale);
      q->setEnabled(true);
    }
    for (const auto& [pname, vals] : ddata.vectorQuantities[QuantityScale::CELL]) {
      auto* q = mesh->addCellVectorQuantity(pname, vals);
      q->setVectorLengthScale(VectorScale);
      q->setEnabled(true);
    }

    for (const auto& [pname, vals] : ddata.colorQuantities[QuantityScale::VERTEX]) {
      mesh->addVertexColorQuantity(pname, toglm(vals))->setEnabled(true);
    }
    for (const auto& [pname, vals] : ddata.colorQuantities[QuantityScale::CELL]) {
      mesh->addCellColorQuantity(pname, toglm(vals))->setEnabled(true);
    }
  }

  template <typename Space, typename KSpace>
  void PolyscopeViewer<Space, KSpace>::renderNewData() {
    using namespace drawutils;

    for (const std::string& name : this->myToRender) {
      auto it = this->data.find(name);
      if (it == this->data.end()) continue;

      const auto& ddata = it->second;
      const auto& vertices = ddata.vertices;

      if (vertices.size() == 0) continue;

      switch(ddata.elementSize) {
        case 1: registerPointCloud(name, ddata); break;
        case 2: registerLineNetwork(name, ddata); break; 
        case 0: 
        case 3:
        case 4: registerSurfaceMesh(name, ddata); break;
        case 8: registerVolumeMesh(name, ddata); break;
        default:
          break;
      };
    }
  }


  template <typename Space, typename KSpace>
  void PolyscopeViewer<Space, KSpace>::polyscopeCallback() {
    this->myCallback->OnUI(nullptr);

    ImGuiIO& io = ImGui::GetIO();
    if (io.MouseClicked[0])
    {
        glm::vec2 screenCoords{io.MousePos.x, io.MousePos.y};
        auto [structure, index] = 
            polyscope::pick::pickAtScreenCoords(screenCoords);

        if (structure != nullptr) {
          void* viewerData = structure;
          std::string name = structure->getName();

          auto& ddata = this->data[name];
          this->myCallback->OnClick(name, index, ddata, viewerData);
        }
    }
  }
