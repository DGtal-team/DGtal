/**
   * Draws the drawable [object] in this board. It should satisfy
   * the concept CDrawableWithDGtalCairo, which requires for instance a
   * method selfDraw( DGtalCairo & ).
   *
   * @param object any drawable object.
   * @return a reference on 'this'.
   */
template <typename TDrawableWithDGtalCairo>
INLINE
DGtal::DGtalCairo & 
DGtal::DGtalCairo::operator<<( const TDrawableWithDGtalCairo & object )
{
  BOOST_CONCEPT_ASSERT((CDrawableWithDGtalCairo< TDrawableWithDGtalCairo >));
  
  object.selfDrawCairo( *this );
  return *this;
}

/**
   * @param objectName the name of the object (generally obtained
   * with a 'object.styleName()').
   *
   * @return the current mode for the given object name or "" if no
   * specific mode has been set.
   */
INLINE
std::string
DGtal::DGtalCairo::getMode( const std::string & objectName ) const
{
  ModeMapping::const_iterator itm = myModes.find( objectName );
  return itm == myModes.end() ? "" : itm->second;
}

/**
   * Add a point as a 3d voxel using default color in the current list.
   * A voxel can be added in a new list by calling: @createNewList().
   * @param x x position.
   * @param y y position.
   * @param z z position.
   * @param color: the color of the voxel (default: 220, 220, 220).
   * @param width: the width of the voxel (default: 0.5).
   *
   **/
INLINE
void
DGtal::DGtalCairo::addVoxel(int x, int y, int z, QColor aColor, double width)
{
  voxel v;
  
  v.x=x;
  v.y=y;
  v.z=z;
  v.R=aColor.red();
  v.G=aColor.green();
  v.B=aColor.blue();
  v.T=aColor.alpha();
  v.width=width;
  
  (myVoxelSetList.at(myVoxelSetList.size()-1)).push_back(v);
}

