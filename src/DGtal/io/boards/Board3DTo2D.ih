/**
   * Set the default color for future drawing.
   *
   * @param aColor: a DGtal::Color (allow to set a trasnparency value).
   *
   **/ 
template < typename S, typename KS>
inline
DGtal::Board3DTo2D<S, KS> &
DGtal::Board3DTo2D<S, KS>::operator<<(const DGtal::Color & aColor){
  myDefaultColor=aColor;
  return *this;
}


/**
   * Draws the drawable [object] in this board. It should satisfy
   * the concept CDrawableWithBoard3DTo2D, which requires for instance a
   * method setStyle( Board3DTo2D & ).
   *
   * @param object any drawable object.
   * @return a reference on 'this'.
   */
template < typename S, typename KS>
template <typename TDrawableWithBoard3DTo2D>
inline
DGtal::Board3DTo2D<S, KS> &
DGtal::Board3DTo2D<S, KS>::operator<<( const TDrawableWithBoard3DTo2D & object )
{
  BOOST_CONCEPT_ASSERT((CDrawableWithBoard3DTo2D< TDrawableWithBoard3DTo2D, S, KS>));

  DGtal::Board3DTo2DFactory::draw(*this, object);
  return *this;
}




