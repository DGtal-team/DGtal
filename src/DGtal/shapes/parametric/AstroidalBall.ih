inline
void
DGtal::AstroidalBall<T>::selfDisplay ( std::ostream & out ) const
{
  out << "[AstroidalBall] center= "<<myCenter<<" Factors a,b,c ="<<myFactors;
}

/**
 * Checks the validity/consistency of the object.
 * @return 'true' if the object is valid, 'false' otherwise.
 */
template <typename T>
inline
bool
DGtal::AstroidalBall<T>::isValid() const
{
    return true;
}





