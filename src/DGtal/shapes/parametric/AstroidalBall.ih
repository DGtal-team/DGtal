     angle.first= atan(l[0]/sqrt(l[0]*l[0]+l[1]*l[1]));
  
      if((l[1]<0.0))
     angle.first= 2*M_PI-atan(l[0]/sqrt(l[0]*l[0]+l[1]*l[1]));
  }
    if(l[2]==0)
    {
	angle.second = M_PI/2.0;
    }
    else
    {
      double norme=sqrt(l[0]*l[0]+l[1]*l[1]);
      angle.second=atan(norme/l[2]);
    }*/
  
  
