DGtal::Ball3D<T>::~Ball3D()
{
}

template <typename T>
inline
DGtal::Ball3D<T>::Ball3D(const double x0, const double y0, const double  z0, const double radius):
  myRadius(radius), myCenter(x0,y0,z0) 
{}


