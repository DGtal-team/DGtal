  template < typename Domain, typename ValueType, typename HashKey  >
  void
  experimental::ImageContainerByHashTree<Domain, ValueType, HashKey  >::setDepth ( unsigned int depth )
  {
    myTreeDepth = depth;
    mySpanSize = 1 << depth;
    //precompute the mask
    myDepthMask = static_cast<HashKey> ( 1 ) << dim * depth;
  }


  template < typename Domain, typename ValueType, typename HashKey  >
  unsigned int
  experimental::ImageContainerByHashTree<Domain, ValueType, HashKey  >::getKeyDepth ( HashKey key ) const
  {
    for ( int i = ( sizeof ( HashKey ) << 3 ) - 1; i >= 0; --i )
      if ( key & ( static_cast<HashKey> ( 1 ) << i ) )
      {
        return ( i ) / dim;
      }
  }


  template < typename Domain, typename ValueType, typename HashKey  >
  int*
  experimental::ImageContainerByHashTree<Domain, ValueType, HashKey  >::getCoordinatesFromKey ( HashKey key ) const
  {
    cerr << "ImageContainerByHashTree::getCoordinatesFromKey" << endl;
    //remove the first bit equal 1

    for ( int i = ( sizeof ( HashKey ) << 3 ) - 1; i >= 0; --i )
    {
      if ( key & Bits::mask<HashKey> ( i ) )
      {
        key &= ~Bits::mask<HashKey> ( i );
        break;
      }
    }

    //cerr << "root bit removed" << endl;
    int* coordinates = new int[dim];
    //deinterleave the bits
    for ( unsigned int i = 0; i < dim; ++i )
    {
      coordinates[i] = 0;
      for ( unsigned int bitPos = 0; bitPos < ( sizeof ( HashKey ) << 3 ) / dim; ++bitPos )
      {
        //cerr << "debug: i="<< i<< " bitPos="<< bitPos<<endl;
        if ( key & Bits::mask ( bitPos*dim + i ) )
        {
          coordinates[i] |= Bits::mask<HashKey> ( bitPos );
        }
      }
    }
    return coordinates;
  }


  template < typename Domain, typename ValueType, typename HashKey  >
  bool
  experimental::ImageContainerByHashTree<Domain, ValueType, HashKey  >::isKeyValid ( HashKey key ) const
  {
    //if(key == ROOT_KEY) return true;
    if ( !key )
      return false;
    if ( getKeyDepth ( key ) > myTreeDepth )
      return false;

    int i = ( sizeof ( HashKey ) << 3 ) - 1;
    for ( ; i >= 0; --i )
      if ( key & ( static_cast<HashKey> ( 1 ) << i ) )
        break;

    if ( i % dim )
    {
      //cerr <<"isKeyValid: i % dim = " << (i % dim) << " i = "<< i << endl;
      return false;
    }

    return true;
  }


