  template < typename Domain, typename ValueType, typename HashKey>
  void
  experimental::ImageContainerByHashTree<Domain, ValueType, HashKey >::setValue ( const Point& aPoint, const ValueType value )
  {
    setValue ( getKey ( aPoint ), value );
  }


  template < typename Domain, typename ValueType, typename HashKey>
  void
  experimental::ImageContainerByHashTree<Domain, ValueType, HashKey >::setValue ( const HashKey key, const ValueType value )
  {
    HashKey brothers[N-1];

    bool broValue = ( key != static_cast<HashKey> ( 1 ) );
    myMorton.brotherKeys ( key, brothers );
    for ( unsigned int i = 0; i < N - 1; ++ i )
    {
      Node* n = getNode ( brothers[i] );
      if ( ! ( n && ( n->getObject() == value ) ) )
      {
        broValue = false;
        break;
      }
    }

    if ( broValue )
    {
      setValue ( myMorton.parentKey ( key ), value );
      return;
    }

    // if the key already exists
    Node* n = getNode ( key );
    if ( n )
    {
      //cerr << "Node already exists" ;
      n->getObject() = value;
      //cerr << " return" << endl;
      //n->setObject(value);
      return;
    }

    //if there's a leaf above the requested node
    HashKey iterKey = key;
    std::list< HashKey > nodeList;
    while ( iterKey != 0 )
    {
      //	cerr << "while(iter)..." << endl;
      n = getNode ( iterKey );
      if ( n )
      {
        //  cerr <<"Node found" << endl;
        ValueType tempVal = n->getObject();
        if ( tempVal == value )
          return;
        removeNode ( iterKey );
        for ( typename std::list< HashKey >::iterator  it = nodeList.begin();
            it != nodeList.end();
            it++ )
        {
          //	cerr << "adding a node ("<< bits::bitString(*it, 8)<<")" << endl;
          addNode ( tempVal, *it );
        }
        addNode ( value, key );
        //cerr << "return " << endl;
        return;
      }
      else
      {
        //cerr << " + " << endl;
        HashKey brothersH[N-1];
        myMorton.brotherKeys ( iterKey, brothersH );
        for ( unsigned int i = 0; i < N - 1; ++i )
        {
          nodeList.push_front ( brothersH[i] );
        }
      }
      iterKey >>= dim;
    }
    addNode ( value, key );
    //    cerr <<" if there's a leaf below the requested node"<<endl;
    unsigned int nbRecur = myTreeDepth - getKeyDepth ( key ) + 1;
    HashKey children[N];
    myMorton.childrenKeys ( key, children );
    for ( unsigned int i = 0; i < N; ++i )
      recursiveRemoveNode ( children[i], nbRecur );
    //cerr << "ImageContainerByHashTree<"<<dim<<">::setValue : return" <<endl;

    return;

  }

  template < typename Domain, typename ValueType, typename HashKey  >
  ValueType experimental::ImageContainerByHashTree<Domain, ValueType, HashKey  >::operator() ( const HashKey key ) const
  {
    return get ( key );
  }
  template < typename Domain, typename ValueType, typename HashKey  >
  ValueType experimental::ImageContainerByHashTree<Domain, ValueType, HashKey  >::operator() ( const Point &aPoint ) const
  {
    return get ( aPoint );
  }

  template < typename Domain, typename ValueType, typename HashKey >
  ValueType experimental::ImageContainerByHashTree<Domain, ValueType, HashKey  >::get ( const HashKey key ) const
  {

    HashKey iterKey = key;
    // node above the requested node
    while ( iterKey != 0 )
    {
      Node* n = getNode ( iterKey );
      if ( n )
        return n->getObject();
      iterKey >>= dim;
    }

    //if the node is deeper than the one requested
    //cerr << "blendChildren() called" << endl;
    return blendChildren ( key );
  }


  template < typename Domain, typename ValueType, typename HashKey >
  ValueType experimental::ImageContainerByHashTree<Domain, ValueType, HashKey  >::reverseGet ( const HashKey key ) const
  {

    HashKey iterKey = key;
    // node above the requested node
    HashKey limit = myDepthMask << 1;
    while ( iterKey < limit )
    {
      Node* n = getNode ( iterKey );
      if ( n )
        return blendChildren ( key );
      iterKey <<= dim;
    }
    iterKey = key;
    while ( iterKey != 0 )
    {
      Node* n = getNode ( iterKey );
      if ( n )
        return n->getObject();
      iterKey >>= dim;
    }
    cerr << "the node should be found by now" << endl;
    //if the node is deeper than the one requested
    //cerr << "blendChildren() called" << endl;
    return 0;
  }


  template < typename Domain, typename ValueType, typename HashKey>
  ValueType
  experimental::ImageContainerByHashTree<Domain, ValueType, HashKey  >::get ( const Point & aPoint ) const
  {
    return get ( getKey ( aPoint ) );
  }

  //Deprecated
  template < typename Domain, typename ValueType, typename HashKey >
  ValueType
  experimental::ImageContainerByHashTree<Domain, ValueType, HashKey  >::upwardGet ( const HashKey key ) const
  {
    //cerr << "ImageContainerByHashTree::upWardGet" << endl;
    HashKey aKey = key;

    while ( aKey )
    {
      HashKey key2 = getIntermediateKey ( aKey );
      Node* iter = myData[key2];

      while ( iter != 0 )
      {
        if ( iter->getKey() == aKey )
          return iter->getObject();
        iter = iter->getNext();
      }
      //key3 << dim; // transorm the key to search in an upper level
      aKey >>= dim; // transorm the key to search in an upper level
    }
  }

  template < typename Domain, typename ValueType, typename HashKey  >
  HashKey
  experimental::ImageContainerByHashTree<Domain, ValueType, HashKey  >::getKey ( const Point & aPoint ) const
  {
    HashKey result = 0;
    Point currentPos = aPoint - myOrigin;

    myMorton.interleaveBits ( currentPos, result );
    // by convention, the root node has the key 0..01
    // it makes it easy to determine the depth of a node by it's key (looking
    // at the position of the most significant bit that is equal to 1)
    result |= myDepthMask;

    return result;
  }

  template < typename Domain, typename ValueType, typename HashKey  >
  HashKey
  experimental::ImageContainerByHashTree<Domain, ValueType, HashKey  >::getIntermediateKey ( HashKey key ) const
  {
    return ( key & myPreComputedIntermediateMask );
  }


  template < typename Domain, typename ValueType, typename HashKey  >
  bool
  experimental::ImageContainerByHashTree<Domain, ValueType, HashKey  >::Iterator::next()
  {
    //cerr << "Iterator::next()" << endl;
    if ( myNode )
    {
      myNode = myNode->getNext();
      if ( myNode )
      {
        //cerr << "case A" << endl;
        return true;
      }
      else
      {
        do
        {
          myNode = myContainerData[++myCurrentCell];
          //cerr << "skip" << endl;
          if ( myCurrentCell >= myArraySize )
            return false;
        }
        while ( !myNode );
        return true;
      }
    }
    return false;
  }

