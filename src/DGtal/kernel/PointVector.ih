template<Dimension dim, typename TComponent>
inline
typename DGtal::PointVector<dim, double>
DGtal::PointVector<dim, TComponent>::getNormalized() const
{
  PointVector<dim,double> normalized =(*this);
  normalized /= normalized.norm();
  return normalized;
}
