template<Dimension dim, typename Component>
DGtal::PointVector<dim, Component>&
DGtal::PointVector<dim, Component>::operator*= ( Component coeff )
{
  for ( Dimension i = 0; i < myArray.size(); ++i )
    myArray[ i ] *= coeff;
  return *this;
}
//------------------------------------------------------------------------------
template<Dimension dim, typename Component>
DGtal::PointVector<dim, Component>
DGtal::PointVector<dim, Component>::operator* ( Component coeff )
{
  Self v = *this;
  v *= coeff;
  return v;
}
