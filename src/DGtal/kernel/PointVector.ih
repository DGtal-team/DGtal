template<Dimension dim, typename Component>
inline
DGtal::PointVector<dim,Component>
DGtal::PointVector<dim,Component>::diagonal( Component val )
{
  Self p;
  for ( Dimension i = 0; i < dim; ++i )
    p.myArray[ i ] = val;
  return p;
}
