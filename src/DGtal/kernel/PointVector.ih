inline
DGtal::PointVector<dim,TComponent>
DGtal::PointVector<dim,TComponent>::diagonal( Component val )
{
  Self p;
  for ( Dimension i = 0; i < dim; ++i )
    p.myArray[ i ] = val;
  return p;
}
