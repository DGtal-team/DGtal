DGtal::SimpleMatrix<T,2,2>::cofactor( ) const
{
  DGtal::SimpleMatrix<T,2,2> mat;
  ASSERT( M == N);
  
  for (DGtal::Dimension i=0; i<2; i++)
    for (DGtal::Dimension j=0; j<2; j++)
      mat.setComponent( i, j , cofactor(i,j));

  return mat;
}
