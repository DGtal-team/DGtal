DGtal::SimpleMatrix<T, TM, TN>::column(const DGtal::Dimension j) const
{
  ASSERT(j<N);
  ColumnVector v;
  for ( DGtal::Dimension i = 0; i < M; ++i )
    v[ i ] = this->operator()(i,j);
  return v;
}
