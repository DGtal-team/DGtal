template<typename T, DGtal::Dimension TM, DGtal::Dimension TN>
inline
DGtal::SimpleMatrix<T, TM, TN> 
DGtal::SimpleMatrix<T, TM, TN>::operator+(const Self& other) const
{
  SimpleMatrix<T,TM,TN> res;
