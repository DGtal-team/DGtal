        const LineCap cap,
        const LineJoin join,
        int depthValue )
  : Shape( pen, fill, lineWidth, lineStyle, cap, join, depthValue ),
    _path( points, closed )
{
}

Polyline::Polyline( const Path & path, 
        DGtal::Color pen,
        DGtal::Color fill,
        double lineWidth,
        const LineStyle lineStyle,
        const LineCap cap,
        const LineJoin join,
        int depthValue )
  : Shape( pen, fill, lineWidth, lineStyle, cap, join, depthValue ),
    _path( path )
