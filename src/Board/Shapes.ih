namespace LibBoard {

Shape::Shape( DGtal::Color pen,
        DGtal::Color fill,
        double lineWidth, 
        LineStyle style,
        const LineCap cap,
        const LineJoin join,
        int depthValue )
  : _depth( depthValue ),
    _penColor( pen ),
    _fillColor( fill ), 
    _lineWidth( lineWidth ),
    _lineStyle( style ),
    _lineCap( cap ), 
    _lineJoin( join )
{
}

Dot::Dot( double x, double y,
    DGtal::Color color, 
    double lineWidth,
    int depthValue )
  : Shape( color, 
     DGtal::Color::None, 
     lineWidth, SolidStyle, RoundCap, MiterJoin, depthValue ),
    _x( x ), _y( y ) 
{
}

Line::Line( double x1, double y1, double x2, double y2, 
      DGtal::Color color, 
      double lineWidth,
